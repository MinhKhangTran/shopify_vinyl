<section aria-label="Intro Abschnitt" id="intro__section">
    <p>
        {{section.settings.title}}
    </p>
    <button class="second__btn">
        <a {% if section.settings.btn_url == blank %} role="link" aria-disabled="true" {% else %} href="{{ section.settings.btn_url }}" {% endif %} ">
            {{ section.settings.btn_text }}
        </a>
    </button>
</section>

{% schema %}
{
    "name": "Intro",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default":"Wir schätzen und respektieren jede Musikrrichtung. Das hört sich für Sie gut an? Kommen Sie uns gerne besuchen."
        },
       {
        "type": "text",
        "id": "btn_text",
        "label": "Btn_text",
        "default":"Jetzt einkaufen"
    },
    {
        "type":"url",
        "id":"btn_url",
        "label":"Btn_url"
    }
    ],
    "presets": [
        {
            "name": "Intro"
        }
    ]
}
{% endschema %}