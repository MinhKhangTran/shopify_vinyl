<section aria-label="single product Abschnitt" class="px-md-4 row" id="single__product--section">
    <div class="col-lg-6">
        <img class="" src="{{product.featured_image | img_url: 'large'}}" alt="{{ product.title }}">
    </div>
    <div class="col-lg-6">
        <h1 class="">{{ product.title }}</h1>
        <p>
            {{product.tags}}
        </p>

        <div>
            <form action="/cart/add" enctype="multipart/form-data" id="AddToCartForm" method="post">

                <select id="productSelect" name="id">
                    {% for variant in product.variants %}
                        {% if variant.available %}
                            <option value="{{ variant.id }}">
                                {{ variant.price | money }}
                            </option>
                        {% else %}
                            <option disabled="disabled">
                                Ausverkauft
                            </option>
                        {% endif %}
                    {% endfor %}
                </select>

                <div class="productQty | d-flex flex-column">
                    <label for="Quantity">Anzahl</label>
                    <input id="Quantity" min="1" name="quantity" type="number" value="1">
                </div>
                <div class="productDesc">
                    {{product.description}}
                </div>
                <button class="main__btn" id="AddToCart" name="add" type="submit">In den Einkaufskorb</button>
            </form>
        </div>
    </div>
</section>